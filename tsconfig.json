{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "zod-v3": ["./node_modules/@modelcontextprotocol/sdk/node_modules/zod"]
    },
    "outDir": "./dist"
  },
  "exclude": ["node_modules"]
}
